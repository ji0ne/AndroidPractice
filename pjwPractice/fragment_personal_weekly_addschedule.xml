<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fragmentPersonal_AddSchedule_tbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        app:layout_constraintBottom_toBottomOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        app:layout_constraintStart_toStartOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        app:layout_constraintEnd_toEndOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        android:textColor="@color/white"
        android:text="일정 추가" />

    <Button
        android:id="@+id/btn_fragmentPersonalWeekly_addSchedule_toBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        app:layout_constraintTop_toTopOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="뒤로가기" />


    <LinearLayout
        android:id="@+id/layout_fragmentPersonalWeekly_weeksCheckBoxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tb_fragmentPersonal_AddSchedule_topToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월" />

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="화" />

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수" />

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="목" />

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="금" />

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="토" />

        <CheckBox
            android:id="@+id/cb_fragmentPersonWeekly_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fragmentPersonalWeekly_scheduleTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_fragmentPersonalWeekly_weeksCheckBoxes"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_frgmentPersonalWeekly_addSchedule_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="time" />

        <TextView
            android:id="@+id/tv_fragmentPersonalWeekly_addSchedule_timeBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="8pt"
            android:textStyle="bold"
            android:text="     : " />

        <EditText
            android:id="@+id/et_frgmentPersonalWeekly_addSchedule_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="time" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_frgmentPersonalWeekly_addSchedule_scheduleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_fragmentPersonalWeekly_scheduleTime"
        android:ems="10"
        android:inputType="text"
        android:hint="일정 제목을 입력하세요 ." />

    <EditText
        android:id="@+id/et_frgmentPersonalWeekly_addSchedule_scheduleMemo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/et_frgmentPersonalWeekly_addSchedule_scheduleName"
        android:ems="20"
        android:inputType="text"
        android:hint="일정의 세부사항을 입력하세요 ." />

    <Button
        android:id="@+id/btn_fragmentPersonalWeekly_addSchedule_saveSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="일정 저장" />


</androidx.constraintlayout.widget.ConstraintLayout>